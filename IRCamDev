        temp = Quadrants(16)
        Quadrants(16) = temp + CamArray5(x)
        'debug dec x, " - ", dec temp, " - ", dec Quadrants(16), " - ", dec CamArray5(x), 10
        
        temp = Quadrants(20)
        Quadrants(20) = temp + CamArray6(x)                                                   
        'debug dec x, " - ", dec temp, " - ", dec Quadrants(20), " - ", dec CamArray6(x), 10
        
        temp = Quadrants(24)
        Quadrants(24) = temp + CamArray7(x)
